        limit=sessions["limit"]

    query="select * from shippedAmounts where platform not LIKE 'Multi' LIMIT (?)"
    con = sqlite3.connect("games.db")
    con.row_factory = sqlite3.Row
    curs = con.cursor()
    curs.execute(query,(limit,))
    rows = curs.fetchall()